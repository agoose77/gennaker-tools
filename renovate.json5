{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor"
  ],
  "commitMessagePrefix": "deps:",
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Do not bump requires-python.",
      "matchManagers": [
        "pep621"
      ],
      "matchPackageNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "description": "Schedule automerged GHA updates for the 15th of each month.",
      "groupName": "gha",
      "schedule": [
        "* * 15 * *"
      ],
      "automerge": true,
      "matchCategories": [
        "ci"
      ],
      "minimumReleaseAge": "10 days"
    },
    {
      "matchCategories": [
        "js"
      ],
      "groupName": "js",
      "minimumReleaseAge": "10 days",
      "rangeStrategy": "update-lockfile"
    },
    {
      "matchCategories": [
        "python"
      ],
      "groupName": "py",
      "minimumReleaseAge": "10 days",
      "rangeStrategy": "bump"
    }
  ]
}